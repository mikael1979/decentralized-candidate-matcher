{
  "sync_scheduling": {
    "version": "3.0.0",
    "description": {
      "fi": "UTC-pohjainen hybridi-aikavarauslista",
      "en": "UTC-based hybrid time slot system", 
      "sv": "UTC-baserat hybrid tidslotsystem"
    },
    
    "time_handling": {
      "timezone": "UTC",
      "date_format": "YYYY-MM-DD",
      "time_format": "HH:mm:ssZ",
      "day_starts_utc": "00:00:00Z",
      "day_ends_utc": "23:59:59Z",
      "week_starts_monday": true
    },
    
    "time_slots": {
      "regular_slot_duration_minutes": 15,
      "emergency_slot_duration_minutes": 10,
      "max_regular_slots_per_machine": 4,
      "max_emergency_slots_per_day": 8,
      "min_advance_booking_hours": 1,
      "max_advance_booking_days": 7,
      "buffer_between_slots_minutes": 5
    },
    
    "reservation_strategy": {
      "emergency_slot_distribution_utc": {
        "00-06_utc": 1,    // Yö (00:00-06:00 UTC)
        "06-12_utc": 2,    // Aamu (06:00-12:00 UTC)  
        "12-18_utc": 3,    // Iltapäivä (12:00-18:00 UTC)
        "18-24_utc": 2     // Ilta (18:00-24:00 UTC)
      },
      "peak_hours_utc": ["09:00-11:00", "14:00-16:00"],
      "off_peak_hours_utc": ["00:00-06:00", "22:00-24:00"],
      "auto_reserve_emergency_slots": true
    },
    
    "global_coordination": {
      "sync_epoch_start": "2024-01-01T00:00:00Z",
      "slot_alignment_minutes": 15,
      "global_maintenance_window": "02:00-04:00 UTC",
      "holiday_schedule": []
    }
  }
}

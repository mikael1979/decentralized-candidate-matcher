{
  "elo_rate_limits": {
    "version": "0.2.0",
    "description": {
      "fi": "ELO-luokituksen 7 päivän estojakso manipulaation estämiseksi",
      "en": "ELO rating 7-day blocking period to prevent manipulation", 
      "sv": "ELO-betyg 7-dagars blockering för att förhindra manipulation"
    },
    
    "blocking_periods": {

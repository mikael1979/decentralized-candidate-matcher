      "temporary_block_hours": 24,
      "permanent_block_threshold": 3,
      "grace_period_first_offense_hours": 12
    },
    
    "violation_triggers": {
      "hourly_limit_violations": {
        "soft_limit_warning": 3,
        "temporary_block": 5,
        "weekly_block": 8
      },
      "daily_limit_violations": {
        "soft_limit_warning": 2,
        "temporary_block": 3, 
        "weekly_block": 5
      },
      "velocity_violations": {
        "temporary_block": 3,
        "weekly_block": 5
      },
      "coordination_detection": {
        "same_ip_multiple_accounts": 2,
        "voting_patterns_similarity": 0.9,
        "time_based_coordination": true
      }
    },
    
    "block_severity": {
      "temporary_24h": {
        "max_rating_change_per_hour": 10,
        "max_comparisons_per_hour": 5,
